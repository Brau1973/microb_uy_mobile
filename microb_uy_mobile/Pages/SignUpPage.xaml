<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="microb_uy_mobile.Pages.SignUpPage">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Spacing="20" Padding="20">
                <Image Source="twitter_logo.png" HeightRequest="100" HorizontalOptions="Center" />

                <Label Text="Regístrate en Twitter" FontSize="24" HorizontalOptions="Center" />

                <Entry Placeholder="Nombre completo" x:Name="fullNameEntry" />
                <Entry Placeholder="Nombre de usuario" x:Name="usernameEntry" />
                <Entry Placeholder="Correo electrónico" x:Name="emailEntry" Keyboard="Email" />
                <Entry Placeholder="Contraseña" x:Name="passwordEntry" IsPassword="True" />

                <Button Text="Registrarse" Clicked="OnSignUpClicked" BackgroundColor="#1DA1F2" TextColor="White" />

                <Label Text="¿Ya tienes una cuenta? Inicia sesión" TextColor="#1DA1F2" HorizontalOptions="Center">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnLoginLinkClicked" />
                    </Label.GestureRecognizers>
                </Label>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
